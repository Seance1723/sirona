{
  "name": "fortiveax-theme",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "watch": "vite build --watch",
    "zip-theme": "npm run build && cd theme && zip -r ../fortiveax.zip .",
    "lint:js": "eslint assets/js",
    "lint:css": "stylelint 'assets/scss/**/*.scss'",
    "lint": "npm run lint:js && npm run lint:css",
    "critical": "critical --base theme --src index.php --css theme/dist/style.css --width 1200 --height 900 --target theme/dist/critical.css",
    "blocks:build": "wp-scripts build theme/blocks/animated-box/index.js --output-path=theme/blocks/animated-box/build",
    "blocks:start": "wp-scripts start theme/blocks/animated-box/index.js --output-path=theme/blocks/animated-box/build"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@wordpress/scripts": "^30.21.0",
    "animate.css": "^4.1.1",
    "autoprefixer": "^10.4.0",
    "bootstrap": "^5.3.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "gsap": "^3.13.0",
    "critical": "^5.2.1",
    "prettier": "^2.0.0",
    "sass": "^1.0.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^35.0.0",
    "vite": "^5.0.0"
  }
}